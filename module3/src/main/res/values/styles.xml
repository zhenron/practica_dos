<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>Customize your theme here. -->
    </style>

    <style name="myViewStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="myViewStyle.LY">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="myViewStyle.TV">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/blueviolet</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="myViewStyle.ET">
        <item name="android:textColor">@color/brown</item>
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="myViewStyle.BT">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/midnightblue</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>

    </style>

</resources>
